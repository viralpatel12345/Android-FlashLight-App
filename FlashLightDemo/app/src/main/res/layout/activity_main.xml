<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="386dp"
        android:layout_height="563dp"
        android:background="#000000"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp">

        <Switch
            android:id="@+id/swt1"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="150dp"
            android:width="65dp"
            android:height="100dp"
            android:background="@drawable/border"
            android:maxWidth="12dp"
            android:maxHeight="100dp"
            android:minHeight="100dp"
            android:scrollbarSize="100dp"
            android:switchMinWidth="45dp"
            android:switchPadding="50dp"
            android:switchTextAppearance="@style/TextAppearance.AppCompat.Button"

            android:textAlignment="center"
            android:textColor="#eee"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/off"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="58dp"
            android:layout_marginTop="252dp"
            android:fontFamily="@font/martel_sans"
            android:text="OFF"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/on"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="252dp"
            android:layout_marginEnd="80dp"
            android:fontFamily="@font/martel_sans"
            android:text="ON"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/msg"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="56dp"
            android:layout_marginBottom="162dp"
            android:fontFamily="@font/martel_sans"
            android:text="Flash Light : OFF"
            android:textAlignment="center"
            android:textColor="#f2d8fa"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="268dp"
            android:layout_height="176dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="35dp"
            app:srcCompat="@drawable/blb" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="253dp"
            android:layout_height="38dp"
            android:layout_alignStart="@+id/off"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="46dp"
            android:fontFamily="@font/martel_sans"
            android:text="Chalu Kar"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#786868"
            android:textSize="16sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="115dp"
            android:background="#262525" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>